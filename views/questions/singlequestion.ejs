<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= question.title %></title>

  <link rel="stylesheet" href="/navbar.css">
  <style>
 * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Segoe UI", Tahoma, sans-serif;
    }

    body {
      background: linear-gradient(135deg, #1d2671, #c33764);
      min-height: 100vh;
      color: #333;
    }


    /* Navbar */
    .navbar {
      background-color: #1e293b;
      padding: 15px 40px;
      color: #fff;
    }

    .navbar h1 {
      font-size: 22px;
    }

    /* Container */
    .container {
      max-width: 98vw;
      max-height:100%;
      margin: 40px auto;
      padding: 25px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .question-title {
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 15px;
      color: #111827;
    }

    .meta {
      font-size: 14px;
      color: #6b7280;
      margin-bottom: 25px;
    }

    .question-description {
      font-size: 17px;
      white-space: pre-line;
    }

    /* Back link */
    .back-link {
      display: inline-block;
      margin-top: 30px;
      text-decoration: none;
      color: #2563eb;
      font-weight: bold;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .answers-section{
        margin-top:4%;
    }

     /* Answer Form Styles */
  .answer-form {
    margin-top: 40px;
    background: #f3f4f6;
    padding: 20px 25px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }

  .answer-form h3 {
    font-size: 20px;
    margin-bottom: 15px;
    color: #111827;
  }

  .answer-form textarea {
    width: 100%;
    min-height: 120px;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #d1d5db;
    resize: vertical;
    font-size: 16px;
    font-family: inherit;
    margin-bottom: 15px;
  }

  .answer-form button {
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    background-color: #2563eb;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .answer-form button:hover {
    background-color: #1d4ed8;
  }
  </style>
</head>
<body>

       <!-- ===== NAVBAR ===== -->
 <%- include('../components/navbar.ejs') %>
  <!--  -->

  <!-- Question Content -->
  <div class="container">
    <div class="question-title">
      <%= question.title %>
    </div>

    <div class="meta">
      Asked by <strong><%= question.user.username %></strong>
      on <%= new Date(question.createdAt).toDateString() %>
    </div>

    <div class="question-description">
      <%= question.description %>
    </div>
<!-- question section ends -->

<!-- Answer Form starts -->

<div class="answer-form">
 
  <form action="/answers/<%= question.id %>" method="POST">
    <textarea name="answer" placeholder="Type your answer here..." required></textarea>
    <button type="submit">Submit Answer</button>
  </form>
</div>

<!-- Answer Form ends -->




<!-- answer sectio0n starts -->
<div class="answers-section">
  <h2>
    Answers 
  </h2>

  
    <% answers.forEach(answer => { %>
        <hr />
      <div class="answer-card">
        <div class="answer-meta">
          Answered by <strong><%= answer.user.username %></strong>
          on <%= new Date(answer.createdAt).toDateString() %>
        </div>
       
        <div class="answer-content">
          -><%= answer.description %>
        </div>
      </div>
     <hr />
    <% }) %>
 
</div>

<!-- answer section ends -->

    <a href="/" class="back-link">‚Üê Back to Home</a>
  </div>

</body>
</html>
